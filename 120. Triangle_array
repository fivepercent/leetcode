public class Solution {
    public int minimumTotal(List<List<Integer>> triangle) {
        if(triangle==null||triangle.size()==0){
            return 0;
        }
        int lvls=triangle.size();
        int[] mins= new int[triangle.get(lvls-1).size()];
        for(int i=0; i<lvls; i++){
            List<Integer> current = triangle.get(i);
            int length=current.size();
            int left_value=mins[0];
            mins[0]+=current.get(0);
            for(int j=1; j<length-1; j++){
                int current_value=mins[j];
                mins[j]=Math.min(left_value, mins[j])+current.get(j);
                left_value=current_value;
            }
            mins[length-1]=left_value+current.get(length-1);
        }
        int minPath=Integer.MAX_VALUE;
        for(int i=0; i<mins.length; i++){
            if(mins[i]<minPath){
                minPath=mins[i];
            }
        }
        return minPath;
    }
}
